@model Person

@{
    ViewData["Title"] = "Вы уверены, что хотите удалить?";
}

<h1>@ViewData["Title"]</h1>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ImageSrc)
        </dt>
        <dd class="col-sm-10">
            <img src="@Html.DisplayFor(model => model.ImageSrc)" class="rounded-circle" width="200" height="200">
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.BirthDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.BirthDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ImageSrc)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ImageSrc)
        </dd>
        <dt class="col-sm-2">
            <a asp-action="Index" class="btn btn-secondary" role="button">Назад</a>
        </dt>
        <dd class="col-sm-10">
            <form asp-action="Delete" asp-route-id="@Html.ValueFor(model => model.Id)">
                <input type="submit" value="Удалить" class="btn btn-danger" />
            </form>
        </dd>
    </dl>
</div>
